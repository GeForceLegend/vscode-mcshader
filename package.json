{
  "name": "vscode-mcshader",
  "displayName": "Lsp for Minecraft Shaderpacks",
  "description": "A Visual Studio Code extension for linting/etc Minecraft GLSL Shaders",
  "version": "0.1.0",
  "publisher": "GeForceLegend",
  "license": "MIT",
  "homepage": "https://github.com/GeForceLegend/vscode-mcshader",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/GeForceLegend/vscode-mcshader"
  },
  "bugs": {
    "url": "https://github.com/GeForceLegend/vscode-mcshader/issues"
  },
  "engines": {
    "vscode": "^1.53.0"
  },
  "keywords": [
    "GLSL",
    "glsl",
    "OpenGL",
    "shader",
    "Minecraft"
  ],
  "categories": [
    "Linters",
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:glsl",
    "workspaceContains:shaders/"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "commands": [
      {
        "command": "mcshader.restart",
        "title": "Restart Language Server",
        "category": "Minecraft Shader"
      }
    ],
    "languages": [
      {
        "id": "glsl",
        "aliases": [
          "OpenGL Shading Language"
        ],
        "extensions": [
          ".fsh",
          ".vsh",
          ".gsh",
          ".glsl"
        ]
      }
    ],
    "configuration": {
      "title": "Lsp for Minecraft Shaderpacks",
      "properties": {
        "mcshader.skipBootstrap": {
          "type": "boolean",
          "default": false,
          "description": "[DEBUG] Enable to skip bootstrapping the language server binary from Github. Set this to use a manually provided language server binary."
        },
        "mcshader.logLevel": {
          "type": "string",
          "default": "info",
          "enum": ["trace", "debug", "info", "warn", "error"],
          "description": "Change the log level of the language server. This change happens live and does not require a restart."
        },
        "mcshader.extraExtension": {
          "type": "array",
          "default": ["inc"],
          "description": "Add extra extension to server file watch list."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && cd client && npm run rollup",
    "compile": "tsc -b",
    "package": "vsce package -o vscode-mc-shader.vsix",
    "watch": "concurrently \"tsc -b -w\" \"cd server && cargo watch -x build\"",
    "postinstall": "cd client && npm install",
    "lint": "eslint 'client/**/*.ts' --max-warnings 1",
    "fix": "eslint 'client/**/*.ts' --fix"
  },
  "devDependencies": {
    "@types/node": "^17.0.21",
    "@typescript-eslint/parser": "^5.15.0",
    "concurrently": "^7.0.0",
    "eslint": "^8.11.0",
    "typescript": "^4.6.2",
    "vsce": "^2.7.0",
    "path-parse": ">=1.0.7"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "rules": {
      "semi": [
        "warn",
        "never"
      ],
      "quotes": [
        "warn",
        "single"
      ]
    }
  }
}
